<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <h1><%= @exhibition.title %> </h1>

      <h2><%= link_to 'Edit', edit_exhibition_path(@exhibition), :class => 'btn btn-default' %></h2>

      <div class="row-fluid dash">
        <div class="span4 people"><a href="<%= url_for(exhibition_artists_path(@exhibition)) %>">
          <span class="icon"><%= icon('user') %></span>
          <span class="count"><%= @total_artists %></span>
          <span class="title"><%= 'people'.pluralize(@total_artists) %></span>
        </a></div>
        <div class="span4 objects"><a href="<%= url_for(exhibition_artworks_path(@exhibition)) %>">
          <span class="icon"><%= icon('diamond') %></span>
          <span class="count"><%= @total_artwork %></span>
          <span class="title"><%= 'object'.pluralize(@total_artwork) %></span>
        </a></div>
        <div class="span4 tours"><a href="<%= url_for(exhibition_tours_path(@exhibition)) %>">
          <span class="icon"><%= icon('map-signs') %></span>
          <span class="count"><%= @total_tours %></span>
          <span class="title"><%= 'tour'.pluralize(@total_tours) %></span>
        </a></div>
      </div>
      <div class="row-fluid dash">
        <div class="span4 categories"><a href="<%= url_for(categories_path) %>">
          <span class="icon"><%= icon('tags') %></span>
          <span class="count"><%= @total_categories %></span>
          <span class="title"><%= 'category'.pluralize(@total_categories) %></span>
        </a></div>
        <div class="span4 locations"><a href="<%= url_for(locations_path) %>">
          <span class="icon"><%= icon('map-marker') %></span>
          <span class="count"><%= @total_locations %></span>
          <span class="title"><%= 'location'.pluralize(@total_locations) %></span>
        </a></div>
        <div class="span4 beacons"><a href="<%= url_for(beacons_path) %>">
          <span class="icon"><%= icon('bluetooth-b') %></span>
          <span class="count"><%= @total_beacons %></span>
          <span class="title">Beacons</span>
        </a></div>
      </div>

      <% if @exhibition.bg_ipad.blank? %>

      <% else %>
      <div class="row-fluid dash">
        <button id='show_overlay' data-visible='false' class="btn btn-default">Show menu overlay</button>
      </div>
      <div class="row-fluid dash">
        <div class='exhibition_image'>
          <%= image_tag(@exhibition.bg_ipad, :class=>"image-underlay") %>
          <%= image_tag(image_url("highlight.png"), :class=>"image-overlay", :style=>"display:none;") %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>

<% content_for :js do %>

    $('#show_overlay').click(function(){
      var show = $('#show_overlay').attr('data-visible');
      if(show == 'false')
      {
        $('#show_overlay').attr('data-visible', 'true');
        $('#show_overlay').text("Hide menu overlay");
        $('.image-overlay').show();
      }
      else
      {
        $('#show_overlay').attr('data-visible', 'false');
        $('#show_overlay').text("Show menu overlay");
        $('.image-overlay').hide();
      }
    });

<% end %>
