<ul>
  <% @entries.each do |entry| %>
  <li class='post'>
    <h1 class="title"><%= link_to(raw(entry.title.sanitize), entry.url) %></h1>
    <h2 class="pubdate"><%= entry.published.to_s(:published) %></h2>
    <div class="video">
      <%= raw(entry.embed_code) %>
    </div>
    <p class="summary"><%= vimeo_summary_cleanup(strip_tags(entry.summary)) %></p>
  </li>
  <% end %>
</ul>
