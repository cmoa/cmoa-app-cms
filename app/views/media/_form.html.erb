<%= form_for([@exhibition, @artwork, @medium], :html => { :multipart => true }) do |f| %>
  <% if @medium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul class="errors">
      <% @medium.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p class="lbl"><%= f.label :title %></p>
  <p class="input"><%= f.text_field :title, :class => 'input-xlarge' %></p>

  <p class="lbl"><%= f.label :alt, 'Accessibility Text (Alt Text)' %></p>
  <p class="input"><%= f.text_field :alt, :class => 'input-xlarge' %></p>

<!--
  <p class="lbl"><%= f.label :description %></p>
  <p class="input"><%= f.text_area :description, :class => 'input-xlarge' %></p>
-->

  <p><%= f.file_field :file, :title => 'Select a file to upload', :class => 'btn-mini btn-success' %></p>

  <p class="submit big-space"><%= f.submit('Upload media', :class => 'btn btn-primary') %></p>
<% end %>
